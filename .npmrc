# ============================================
# NPM Configuration
# ============================================

# パッケージロックファイルを生成
package-lock=true

# 正確なバージョンで保存
save-exact=false

# devDependenciesとして保存
save-dev=false

# オプション依存関係のインストールエラーを無視
optional=true

# エンジンの厳密なチェック（推奨: true）
engine-strict=false

# プログレスバーを表示
progress=true

# ログレベル（info, warn, error, silent）
loglevel=warn

# キャッシュの最小値（秒）
prefer-offline=false

# タイムアウト（ミリ秒）
fetch-timeout=60000

# 同時接続数
maxsockets=50

# ============================================
# セキュリティ
# ============================================
# audit時の最小脆弱性レベル（low, moderate, high, critical）
audit-level=moderate

# ============================================
# パフォーマンス
# ============================================
# 並列インストール数
max-old-space-size=4096

# ============================================
# レジストリ設定（必要に応じて変更）
# ============================================
# registry=https://registry.npmjs.org/

# ============================================
# その他
# ============================================
# updateを実行時に変更を自動保存
save=true

# fundingメッセージを表示しない
fund=false

# auditを自動実行しない（高速化）
audit=true
